{
  "version": 2,
  "name": "jss-placement-portal",
  "builds": [
    {
      "src": "placement-portal/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "placement-portal/backend/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "placement-portal/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "placement-portal/frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
